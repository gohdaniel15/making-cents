<div id="clearance" class="sign-up">
  <h2><%= t(".title") %></h2>

  <%= form_for @user do |form| %>
    <%= render partial: '/users/form', object: form %>

    <div class="submit-field">
      <%= form.submit %>
    </div>

    <button><%= link_to "Sign up with Google", "/auth/google_oauth2", id: "sign_in" %></button>
    <button><%= link_to "Sign up with Facebook", "/auth/facebook", id: "sign_in" %></button>

    <div class="other-links">
      <p>Already have an account with us?
        <%= link_to t(".sign_in"), sign_in_path %>
      </p>
    </div>
  <% end %>


</div>
