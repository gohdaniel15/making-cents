<div class = "clearance">
  <div class="sign-up">
  <h2><%= t(".title") %></h2>

  <%= form_for @user do |form| %>
   <%= render partial: '/users/form', object: form %> 
  <% end %>
  </div>
  <div class="row">
    <%= link_to "Sign up with Google", "/auth/google_oauth2", id: "sign_in", class: "btn-google" %>
    <%= link_to "Sign up with Facebook", "/auth/facebook", id: "sign_in", class: "btn-fb" %>
    <div class="other-links">
      <p>Already have an account with us?
        <%= link_to t(".sign_in"), sign_in_path %>
      </p>
    </div>
  </div>
  </div>        
</div>    




